<!doctype html>
<html>

<head>
  <meta charset="utf-8"/>
  <meta name="apple-mobile-web-app-capable" content="yes"/>
  <meta name="apple-mobile-web-app-status-bar-style" content="black"/>
  <meta name="format-detection" content="telephone=no"/>
  <meta name="format-detection" content="email=no"/>
  <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,minimum-scale=1,user-scalable=no">
  <script type="text/javascript" src="https://res.wx.qq.com/open/js/jweixin-1.3.2.js"></script>
  <script type="text/javascript" src="//cdn.staticfile.org/jquery/3.3.1/jquery.min.js"></script>
  <title>积分商城</title>
</head>

<script>
  $(document).ready(function() {
    //个人中心
    $('#root').parent().on('click', '.user_info_btn', function() {
      wx.miniProgram.navigateTo({ url: '/pages/me/me' });
    });


    // 点击商品
    $('#root').parent().on('click', '.product', function() {
      var productId = $(this).attr('productId');
      wx.miniProgram.navigateTo({ url: '/pages/point/product-detail?productId='+productId });
    });
  })
</script>
<body>
<div id="root"></div>
</body>

</html>
